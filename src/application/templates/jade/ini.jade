doctype html
html(ng-app="myApp")
head
  title appengine + NDB + Angular CRUD
  meta(name="viewport", content="width=device-width, initial-scale=1")
  link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
  link#efor-style(rel='stylesheet', href='/static/css/style.css')

  //
    link(rel='stylesheet', href='https://code.getmdl.io/1.1.2/material.blue_grey-indigo.min.css')
    script(defer, src='//code.getmdl.io/1.1.3/material.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.5.2/angular.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.5.2/angular-animate.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.5.2/angular-route.min.js')
  //
  link(rel='stylesheet', href='/static/components/material-design-lite/material.min.css')
  script(src='/static/components/jquery/dist/jquery.min.js')
  script(src='/static/components/material-design-lite/material.min.js')
  script(src='/static/components/angular/angular.min.js')
  script(src='/static/components/angular-route/angular-route.min.js')
  script(src='/static/components/angular-animate/angular-animate.min.js')

  script(defer, src="/static/components/efor-components/dev-tools/dev-utils-scripts.js")
  script(src='/static/js/utils.js')
  script(src='/static/components/efor-components/angular-efor-modal/efor_modal.js')
  script(src='/static/components/angular-ui-notification/dist/angular-ui-notification.js')
  script(src='/static/js/angular/app.js')
body
  .mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer
    header.mdl-layout__header
      .mdl-layout__header-row
        span.mdl-layout-title Title
        .mdl-layout-spacer
        .mdl-textfield.mdl-js-textfield.mdl-textfield--expandable.mdl-textfield--floating-label.mdl-textfield--align-right
          label.mdl-button.mdl-js-button.mdl-button--icon(for="search")
            i.material-icons search
          div.mdl-textfield__expandable-holder
            input#search.mdl-textfield__input(type="text", name="search")

    .mdl-layout__drawer
      span.mdl-layout-title Title
      nav.mdl-navigation
        a.mdl-navigation__link(href='#/list') l List
        a.mdl-navigation__link(href='#/b') l B

    main.mdl-layout__content(ng-controller="mainController as mn")
      div(ng-view)

  // modal
  .efor-modal.ani-slide.no-quit-button(ng-controller="efModalCtrl")
    .efor-modal-btn-quit.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--mini-fab.mdl-js-ripple-effect(ng-click='efmodal.close()')
        i.material-icons close
      div(ng-include='templateUrl')

