.esmg-modal-wrapper
  .white-box.box-mini
    form.content-section.form-upload-file(name='form', novalidate='')

      .info-header
        h3.title-info.mdl-typography--headline Add Item

      .info-body
        .overflow-form

          fieldset.fieldset.relevant

            .mdl-textfield.mini-input.mdl-js-textfield.mdl-textfield--floating-label
              input#item_list_name.mdl-textfield__input(type='text', name='item_list_name', ng-model='scope.item_to_send.example_name')
              label.mdl-textfield__label(for='item_list_name') Name

            .mdl-textfield.mini-input.mdl-js-textfield.mdl-textfield--floating-label
              textarea#item_list_description.mdl-textfield__input(type='text', rows='2', name='item_list_description', ng-model='scope.item_to_send.example_description')
              label.mdl-textfield__label(for='item_list_description') Description

      .info-footer
        button#btnUpdate.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored(type='button', ng-click='scope.saveItem(form)') Save
        button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect(type='button', ng-click='efmodal.close()') Cancel
